@using WebsiteThucPhamSach_VS2.Models
@model List<menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid p-3">
    <a href="#wrapper-create-menu" class="btn btn-primary btn-sm mt-3 mb-3 p-2 add-menu">Thêm</a>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Danh mục</div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Danh Mục</th>
                            <th>Mã Danh Mục Cha</th>
                            <th>Thứ Tự</th>
                            <th>Trạng thái</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var name = "";
                            if (item.status == true)
                            {
                                name = "Bật";
                            }
                            else
                            {
                                name = "Tắt";
                            }
                        <tr>
                            <td>@item.id</td>
                            <td>@item.name</td>
                            <td>@item.parent_id</td>
                            <td>@item.order</td>
                            <td>
                                <input type="submit" class="status btn btn-info" data-id="@item.id" value="@name" />
                            </td>
                            <td>
                                <a href="#wrapper-create-menu" data-id="@item.id" class="btnUpdateMenu p-2 text-warning" data-toggle="tooltip" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" data-id="@item.id" class="btnDeleteMenu p-2" data-toggle="tooltip" title="Xóa">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

