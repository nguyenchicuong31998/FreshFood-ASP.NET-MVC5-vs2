@using WebsiteThucPhamSach_VS2.Areas.Dashboard.Models
@model UsersAdModel
@{
    ViewBag.Title = "Sửa thông tin khách hàng";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-lg-center">
        <div class="col-12 col-lg-8">
            <h3 class="font-weight-bold text-center">Sửa thông tin khách hàng</h3>
            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true);

                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Id:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextBoxFor(UsersAdModel => UsersAdModel.id, new { @class = "form-control input-share input-size input-height", @readonly = "readonly" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.id, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Họ và tên<span class="text-danger">*</span>:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextBoxFor(UsersAdModel => UsersAdModel.display_name, new { @class = "form-control input-share input-size input-height", @Placeholder = "Họ và tên*" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.display_name, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Giới tính:</label>
                    <div class="col-9 col-md-10">
                        @if (Model.gender == null)
                        {
                            @Html.RadioButtonFor(UsersAdModel => UsersAdModel.gender, "true") <span>Nam</span>
                            <span class="space"></span>
                            @Html.RadioButtonFor(UsersAdModel => UsersAdModel.gender, "false") <span>Nữ</span>
                        }
                        else
                        {
                            @Html.RadioButtonFor(UsersAdModel => UsersAdModel.gender, "true", htmlAttributes: new { @checked = true }) <span>Nam</span>
                            <span class="space"></span>
                            @Html.RadioButtonFor(UsersAdModel => UsersAdModel.gender, "false") <span>Nữ</span>
                        }
                    </div>
                </div>
                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Ngày sinh<span class="text-danger">*</span>:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextBoxFor(UsersAdModel => UsersAdModel.date_of_birth, "{0:dd/MM/yyyy}", new { @class = "form-control input-birthday", @Placeholder = "Vui lòng chọn ngày sinh" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.date_of_birth, "", new { @class = "text-error" })
                    </div>
                </div>
                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Số điện thoại<span class="text-danger">*</span>:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextBoxFor(UsersAdModel => UsersAdModel.phone_number, new { @class = "form-control input-share input-size input-height", @Placeholder = "Nhập số điện thoại*" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.phone_number, "", new { @class = "text-error" })
                    </div>
                </div>
                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Địa chỉ:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextAreaFor(UsersAdModel => UsersAdModel.address, new { @class = "form-control  input-size", @rows = "4", @Placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.address, "", new { @class = "text-error" })
                    </div>
                </div>
                <div class="form-group mt-4 mb-4 row">
                    <label class="col-3 col-md-2 col-form-label">Email<span class="text-danger">*</span>:</label>
                    <div class="col-9 col-md-10">
                        @Html.TextBoxFor(UsersAdModel => UsersAdModel.email, new { @readonly = "readonly", @class = "form-control input-share input-size input-height", @Placeholder = "Email*" })
                        @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.email, "", new { @class = "text-error" })
                    </div>
                </div>
                @*<div class="form-group mt-4 mb-4 row">
                <label class="col-3 col-md-2 col-form-label">Mật khẩu<span class="text-danger">*</span>:</label>
                <div class="col-9 col-md-10">
                    @Html.TextBoxFor(UsersAdModel => UsersAdModel.password, new { @class = "form-control input-share input-size input-height", @Placeholder = "Nhập mật khẩu*" })
                    @Html.ValidationMessageFor(UsersAdModel => UsersAdModel.password, "", new { @class = "text-error" })
                </div>
            </div>*@
                <div class="form-group mt-4 mb-4 row">
                    <div class="col-3 col-md-2"></div>
                    <div class="col-9 col-md-10">
                        <input type="submit" class="btn btn-sm btn-primary p-2" value="Lưu" />
                        <a href="~/Dashboard/User/Index" class="btn btn-sm btn-success p-2">Quay lại</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

