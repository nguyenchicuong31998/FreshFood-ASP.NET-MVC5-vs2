@using WebsiteThucPhamSach_VS2.Models
@model List<role>
@{
    ViewBag.Title = "Phân Quyền";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid p-3">
    <a href="#wrapper-create-role" class="btn btn-primary btn-sm mt-3 mb-3 p-2 add-role">Thêm</a>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Phân Quyền</div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên nhóm quyền</th>
                            <th>Trạng thái</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var name = "";
                            if (item.status == true)
                            {
                                name = "Bật";
                            }
                            else
                            {
                                name = "Tắt";
                            }
                            <tr>
                                <td>@item.id</td>
                                <td>@item.name</td>
                                <td>
                                    <input type="submit" class="status btn btn-info" data-id="@item.id" value="@name" />
                                </td>
                                <td>
                                    <a href="#wrapper-create-role" data-id="@item.id" class="btnUpdateRole p-2" data-toggle="tooltip" title="Sửa"><img src="~/Img/edit.png" alt="Update" /></a>
                                    <a href="#" data-id="@item.id" class="btnDeleteRole p-2"  data-toggle="tooltip" title="Xóa"><img src="~/Img/delete.png" alt="Delete" /></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="wrapper-create-role" class="wrapper-create-role">

</div>

