@using WebsiteThucPhamSach_VS2.Areas.Dashboard.Models;
@model LoginModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Css/Client/_common.css" />
</head>
<body>
    <div class="container">
        <div class="row ">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="w-25">
                    @using (Html.BeginForm("Login", "Dashboard", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            @Html.TextBoxFor(LoginModel => LoginModel.email, new { @class = "form-control input-email", @Placeholder = "Vui lòng nhập email" })
                            @Html.ValidationMessageFor(LoginModel => LoginModel.email, "", new { @class = "text-error" })
                        </div>
                        <div class="form-group">
                            <label for="inputPasswrod">Mật khẩu</label>
                            @Html.PasswordFor(LoginModel => LoginModel.password, new { @class = "form-control input-password", @Placeholder = "Vui lòng nhập mật khẩu" })
                            @Html.ValidationMessageFor(LoginModel => LoginModel.password, "", new { @class = "text-error" })
                        </div>
                        <span class="text-error">@ViewBag.errorLogin</span>
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
