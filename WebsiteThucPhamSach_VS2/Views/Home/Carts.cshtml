                var id = $(this).data('id');
                var quantity = jQuery(this).closest(".quantity").find(".qty").val();
                    $.ajax({
                        url: "/Home/UpdateQuantityProductById",
                        data: { id: id, quantity: quantity},
                        dataType: "json",
                        type: "POST",
                        success: function (res) {
                            if (res.status == true) {
                                location.reload();
                            }
                        }
                    })
            });

        })

    </script>
}