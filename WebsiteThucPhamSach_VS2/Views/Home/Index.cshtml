            <div class="col-12">
                @Html.Action("SlidePartial", "Slide")
            </div>
        </div>  
    </div>
</div>
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            @Html.Partial("_LeavesPartial")
            <div class="new-product-main mb-2">
                @Html.Action("NewProductPartial", "Home")
            </div>
            @*@Html.Partial("_LeavesPartial")
                <div class="featured-product-main mb-2">
                    @Html.Action("FeaturedProductPartial", "Home")
                </div>>*@
            @Html.Partial("_LeavesPartial")
            <div class="sell-product-main"> 
                @Html.Action("ProductForYouPartial", "Home")
            </div>
            <div class="featured-news">
                @Html.Partial("_LeavesPartial")
                @Html.Partial("_NewsHotPartial")
            </div>
        </div>
    </div>
</div>




@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var sizeFaqs = $('.product-for-your').length;
            var sizeDefault = 12;
            if (sizeFaqs < sizeDefault) {
                $("#load-more").hide();
            }

            $('.product-for-your').hide();
            $('.product-for-your:lt(' + sizeDefault + ')').show();
            $('#load-more').click(function () {
                sizeDefault = (sizeDefault + 8 <= sizeFaqs) ? sizeDefault + 8 : sizeFaqs;
                $('.product-for-your:lt(' + sizeDefault + ')').show();
                // hide load more button if all items are visible
                if ($(".product-for-your:visible").length >= sizeFaqs) { $("#load-more").hide(); }
            });

        });

    </script>
}