@using WebsiteThucPhamSach_VS2.Models
@model ContactsModel
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@{
    var message = TempData["message"] ?? string.Empty;
}
<div class="container mt-3">
    <div class="row">
        <div class="col-12 col-lg-5">
            <h3>Gửi tin nhắn cho chúng tôi</h3>
            <div class="row mt-5">
                <div class="col-12">
                    @using (Html.BeginForm("Contacts", "Home", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-group mt-4 mb-4">
                            @Html.TextBoxFor(ContactsModel => ContactsModel.full_name, new { @class = "form-control input-share input-size input-height", @Placeholder = "Họ và tên*" })
                            @Html.ValidationMessageFor(ContactsModel => ContactsModel.full_name, "", new { @class = "text-error" })
                        </div>
                        <div class="form-group mt-4 mb-4">
                            @Html.TextBoxFor(ContactsModel => ContactsModel.email, new { @class = "form-control input-share input-size input-height", @Placeholder = "Email*" })
                            @Html.ValidationMessageFor(ContactsModel => ContactsModel.email, "", new { @class = "text-error" })
                        </div>
                        <div class="form-group mt-4 mb-4">
                            @Html.TextBoxFor(ContactsModel => ContactsModel.phone_number, new { @class = "form-control input-share input-size input-height", @Placeholder = "Số điện thoại*" })
                            @Html.ValidationMessageFor(ContactsModel => ContactsModel.phone_number, "", new { @class = "text-error" })
                        </div>
                        <div class="form-group mt-4 mb-4">
                            @Html.TextAreaFor(ContactsModel => ContactsModel.content, new { @class = "form-control input-share input-size", @rows = "6", @Placeholder = "Nhập nội dung*" })
                            @Html.ValidationMessageFor(ContactsModel => ContactsModel.content, "", new { @class = "text-error" })
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <input type="submit" class="btn bg-green custom-btn text-light p-3" value="Gửi liên hệ" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-7 mb-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.1766576643449!2d106.66984632916379!3d10.985502016041067!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174d1218b215be3%3A0xe523cabbe2da680b!2zMTA3IMSQb8OgbiBUaOG7iyBMacOqbiwgUGjDuiBM4bujaSwgVGjhu6cgROG6p3UgTeG7mXQsIELDrG5oIETGsMahbmcsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1554276403164!5m2!1svi!2s" width="100%" height="450px" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" charset="utf-8">
            var message = '@message';
            if (message) {
                alert("Bạn đã gửi liên hệ thành công");
            }
    </script>
}