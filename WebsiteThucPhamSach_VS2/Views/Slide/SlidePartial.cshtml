
@{ 
    string Slide_1 = Html.Action("getAdvertisByOrder", "Slide", new { order = 2 }).ToString();
    Slide_1 = Slide_1 != " " ? Slide_1 : "https://via.placeholder.com/900x450";
    string Slide_2 = Html.Action("getAdvertisByOrder", "Slide", new { order = 3 }).ToString();
    Slide_2 = Slide_2 != " " ? Slide_2 : "https://via.placeholder.com/900x450";
    string Slide_3 = Html.Action("getAdvertisByOrder", "Slide", new { order = 4 }).ToString();
    Slide_3 = Slide_3 != " " ? Slide_3 : "https://via.placeholder.com/900x450";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 custom-slide-img " src="@Url.Content(Slide_1)" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 custom-slide-img" src="@Url.Content(Slide_2)" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 custom-slide-img" src="@Url.Content(Slide_3)" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

